/* pages/my/my.wxss */

.personal_info{
    padding:20px 0;
    background-color: #ffffff;
    position: relative
}
.photo_wrap{
    width: 180rpx;
    height: 180rpx;
    position: relative;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    margin: auto;
    border-radius: 86rpx;
}
.photo_wrap:after {
    position: absolute;
    content: '';
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    box-shadow: 0 0 10rpx 10rpx #fff inset;
    border-radius: 86rpx;
}
.photo_wrap image{
    width: 180rpx;
    height: 180rpx;
    border-radius: 90rpx;
}
.photo_wrap button{
    width: 180rpx;
    height: 180rpx;
    position: absolute;
    top: 0;
    z-index: 1;
    opacity: 0.01;
}
.nickname{
    text-align: center;
    color: #696969;
}
.wode_item_wrap{
    background-color: #fff;
    margin-top: 10px;
    font-size: 14px;
    border-top: 1px solid #e5e5e5;
}
.wode_item{
    font-size: 14px;
   padding: 0 10px;
   height: 45px;
   line-height: 45px;
    border-bottom: 1px solid #e5e5e5;
    position: relative;
}
.wode_item image{
    width: 20px;
    height: 20px;
    position: absolute;
    top: 12px;
    right: 10px;
}